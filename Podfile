# platform :ios, '9.0'

target 'Porteclair' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'SwiftyGif'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  pod 'FirebaseUI/Storage'
  pod 'SwiftyJSON'
  pod 'NVActivityIndicatorView'


  # Pods for Porteclair

  target 'PorteclairTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'PorteclairUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
